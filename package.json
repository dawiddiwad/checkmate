{
	"name": "checkmate-exp",
	"version": "0.2.3.0",
	"description": "AIâ€‘driven e2e test automation framework built on Playwright Test and OpenAI API",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		}
	},
	"keywords": [
		"test automation",
		"ai",
		"llm",
		"playwright",
		"openai",
		"e2e testing"
	],
	"scripts": {
		"checkmate:install": "npm install && npx playwright install",
		"build": "tsc -p tsconfig.build.json",
		"clean": "rm -rf dist",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier . --write",
		"format:check": "prettier . --check",
		"test:unit": "vitest --config src/test/vitest.config.ts",
		"test:unit:ui": "vitest --ui --config src/test/vitest.config.ts",
		"test:unit:coverage": "vitest --coverage --config src/test/vitest.config.ts",
		"test:unit:run": "vitest run --config src/test/vitest.config.ts",
		"test:web": "npx playwright test --project=web",
		"test:salesforce": "npx playwright test --project=salesforce",
		"test:web:example": "npx playwright test --project=web --grep=ollama",
		"show:report": "npx playwright show-report test-reports/html"
	},
	"author": "Dawid Dobrowolski SoftQA",
	"license": "MIT",
	"dependencies": {
		"@playwright/test": "^1.57.0",
		"@types/node": "^24.10.1",
		"dotenv": "^17.2.3",
		"openai": "^6.10.0",
		"sharp": "^0.34.5",
		"strip-ansi": "^7.1.2",
		"winston": "^3.19.0",
		"yaml": "^2.8.2"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.2",
		"@vitest/coverage-v8": "^4.0.16",
		"@vitest/ui": "^4.0.16",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"prettier": "^3.7.4",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.50.1",
		"vitest": "^4.0.16"
	}
}
